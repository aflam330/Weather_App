<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg_color"
    android:padding="16dp">

    <TextView
        android:layout_width="193dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:background="@drawable/img"
        android:gravity="center"
        android:text="Weather"
        android:textColor="#5F4F4F"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="237dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etcity"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Enter City Name"
            android:inputType="textPersonName"
            android:textColor="#423B3B" />

        <EditText
            android:id="@+id/etCountry"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Enter Country Code (optional)"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#2F3D89"
            android:onClick="getWeatherDetails"
            android:text="Get"
            app:backgroundTint="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="70dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/show_cityName"
            android:layout_width="370dp"
            android:layout_height="67dp"
            android:textColor="#6B6767"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/show_temp"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/show_humidity"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/show_wind_speed"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/show_cloudiness"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/show_pressure"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:textColor="@color/white"
            android:gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="375dp"
            android:layout_height="99dp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
